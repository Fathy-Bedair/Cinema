@using Movie_Ticket_Booking.Models
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Users Management";
}

<div class="container py-5">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <h3 class="fw-bold mb-4"><i class="bi bi-people-fill me-2"></i>Manage Users</h3>

            @if (TempData["success-notification"] != null)
            {
                <div class="alert alert-success">@TempData["success-notification"]</div>
            }

            @if (TempData["error-notification"] != null)
            {
                <div class="alert alert-danger">@TempData["error-notification"]</div>
            }

            <table class="table table-bordered table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-muted">No users found</td>
                        </tr>
                    }
                    else
                    {
                        var index = 1;
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@($"{user.FirstName} {user.LastName}")</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td>
                                    @if (user.Email == "admin@site.com")
                                    {
                                        <span class="badge bg-danger">Super Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">User</span>
                                    }
                                </td>
                                <td>
                                    @if (user.LockoutEnd != null && user.LockoutEnd > DateTime.UtcNow)
                                    {
                                        <span class="badge bg-danger">Locked</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-controller="User" asp-action="LockUnLock" asp-route-id="@user.Id"
                                       class="btn btn-sm @(user.LockoutEnd != null && user.LockoutEnd > DateTime.UtcNow ? "btn-success" : "btn-danger")">
                                        <i class="bi @(user.LockoutEnd != null && user.LockoutEnd > DateTime.UtcNow ? "bi-unlock-fill" : "bi-lock-fill") me-1"></i>
                                        @(user.LockoutEnd != null && user.LockoutEnd > DateTime.UtcNow ? "Unlock" : "Lock")
                                    </a>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_NotificationPartial" />
}
