@model IEnumerable<Movie_Ticket_Booking.Models.Movie>

@{
    ViewData["Title"] = "Movie";
}
<div class="my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0"><i class="bi bi-film"></i> Movie</h2>
        <a asp-area="Admin" asp-controller="Movie" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Movie
        </a>
    </div>
    <div class="table-responsive scrollbar">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Cinma</th>
                    <th scope="col">Description</th>
                    <th scope="col">Poster</th>
                    <th scope="col">In Cinema</th>
                    <th scope="col">Release Date</th>
                    <th scope="col">Price</th>
                    <th class="text-end" scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@movie.Title</td>
                        <td>@movie.Category.Name</td>
                        <td>@movie.Cinema.Name</td>
                        <td>@movie.Description</td>
                        <td>
                            <img src="@movie.PosterURL" height="80" style="object-fit: cover; border-radius: 10px;" />
                        </td>
                        <td>@(movie.InCinema ? "Yes" : "No")</td>
                        <td>@movie.ReleaseDate.ToString("yyyy-MM-dd")</td>
                        <td>$@movie.Price.ToString("F2")</td>
                        <td class="text-end">
                            <div>
                                <div>
                                    <a href="/Admin/Movie/Edit/@movie.Id" class="btn btn-link p-0" data-bs-toggle="tooltip" title="Edit">
                                        <span class="text-500 fas fa-edit"></span>
                                    </a>

                                    <a href="/Admin/Movie/Delete/@movie.Id" class="btn btn-link p-0 ms-2" data-bs-toggle="tooltip" title="Delete">
                                        <span class="text-500 fas fa-trash-alt"></span>
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>