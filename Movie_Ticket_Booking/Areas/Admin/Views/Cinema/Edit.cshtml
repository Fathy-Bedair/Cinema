@model Cinema

@{
    ViewData["Title"] = "Edit Cinema";
}

<div class="container my-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h3 class="mb-4"><i class="bi bi-plus-circle"></i> Edit Cinema</h3>

            <form asp-action="Edit" asp-controller="Cinema" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                @if (Model.Logo is not null)
                {
                <div class="mb-3 text-center">
                    <label class="form-label fw-bold">Current Logo</label><br />
                    <img src="@Model.Logo" alt="Current Logo" width="150" height="150" style="object-fit: cover; border-radius: 10px; border: 1px solid #ccc;" />
                </div>
                }
                <div class="mb-3">
                    <label asp-for="Logo" class="form-label">Upload logo</label>
                    <input class="form-control" type="file" name="logo" placeholder=" Choose logo" />

                </div>


                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
