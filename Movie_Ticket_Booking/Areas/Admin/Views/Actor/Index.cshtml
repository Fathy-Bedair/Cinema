@model IEnumerable<Actor>

@{
    ViewData["Title"] = "Movie Actors";
}
<div class="my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0"><i class="bi bi-film"></i> Actors</h2>
        <a asp-area="Admin" asp-controller="Actor" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Actor
        </a>
    </div>
    <div class="table-responsive scrollbar">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Bio</th>
                    <th scope="col">Photo</th>
                    <th class="text-end" scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var actor in Model)
                {
                    <tr>
                        <td>@actor.Name</td>
                        <td>@actor.Bio</td>
                        <td>
                            <img src="@actor.ProfilePictureURL" height="80" style="object-fit: cover; border-radius: 10px;" />
                        </td>
                        <td class="text-end">
                            <div>
                                <div>
                                    <a href="/Admin/Actor/Edit/@actor.Id" class="btn btn-link p-0" data-bs-toggle="tooltip" title="Edit">
                                        <span class="text-500 fas fa-edit"></span>
                                    </a>

                                    <a href="/Admin/Actor/Delete/@actor.Id" class="btn btn-link p-0 ms-2" data-bs-toggle="tooltip" title="Delete">
                                        <span class="text-500 fas fa-trash-alt"></span>
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>