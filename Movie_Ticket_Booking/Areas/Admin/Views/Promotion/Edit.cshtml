@model Movie_Ticket_Booking.Models.Promotion

@{
    ViewData["Title"] = "Edit Promotion";
}

<div class="container py-5">
    <h2 class="mb-4"><i class="bi bi-pencil-square"></i> Edit Promotion</h2>

    <form asp-action="Edit" method="post" class="card p-4 shadow-sm">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label for="MovieId" class="form-label">Product</label>
            <select name="MovieId" class="form-select">
                @foreach (var item in ViewBag.movies)
                {
                    <option value="@item.Id" selected="@(item.Id == Model.MovieId)">
                        @item.Title
                    </option>
                }
            </select>

            <span class="text-danger" asp-validation-for="@Model.MovieId"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Code" class="form-label"></label>
            <input asp-for="Code" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Discount" class="form-label"></label>
            <input asp-for="Discount" type="number" step="0.01" class="form-control" />
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="PublishAt" class="form-label"></label>
                <input asp-for="PublishAt" type="date" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="ValidTo" class="form-label"></label>
                <input asp-for="ValidTo" type="date" class="form-control" />
            </div>
        </div>

        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Update</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
