@model IEnumerable<Promotion>

@{
    ViewData["Title"] = "Promotions";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-ticket-perforated"></i> Promotions</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Promotion
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No promotions available.
        </div>
    }
    else
    {
        <table class="table table-striped align-middle text-center shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Code</th>
                    <th>Movie</th>
                    <th>Discount</th>
                    <th>Publish At</th>
                    <th>Valid To</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var promo in Model)
                {
                    <tr>
                        <td>@promo.Code</td>
                        <td>@promo.Movie?.Title</td>
                        <td>@promo.Discount %</td>
                        <td>@promo.PublishAt.ToShortDateString()</td>
                        <td>@promo.ValidTo.ToShortDateString()</td>
                        <td>
                            @if (promo.IsValid)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Expired</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@promo.Id" class="btn btn-sm btn-warning me-1"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@promo.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
