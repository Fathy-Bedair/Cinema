@model IEnumerable<Movie_Ticket_Booking.Models.Cart>

@{
    ViewData["Title"] = "Your Cart";
    decimal total = Model.Sum(item => item.Price * item.Count);
}

<div class="container py-5">
    <h2 class="mb-4"><i class="bi bi-cart4"></i> Your Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-emoji-frown"></i> Your cart is empty.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>Poster</th>
                        <th>Movie</th>
                        <th>Price</th>
                        <th>Tickets</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.Movie.PosterURL" alt="@item.Movie.Title" width="80" class="rounded" />
                            </td>
                            <td>
                                <strong>@item.Movie.Title</strong><br />
                                <small class="text-muted">@item.Movie.Category?.Name</small>
                            </td>
                            <td>$@item.Price</td>
                            <td>
                                <div class="d-inline-flex align-items-center justify-content-center">
                                    <form asp-action="DecrementMovie" method="post" class="me-1">
                                        <input type="hidden" name="movieId" value="@item.MovieId" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">−</button>
                                    </form>

                                    <input type="text" readonly class="form-control text-center" style="width: 50px;" value="@item.Count" />

                                    <form asp-action="IncrementMocie" method="post" class="ms-1">
                                        <input type="hidden" name="movieId" value="@item.MovieId" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">+</button>
                                    </form>
                                </div>
                            </td>
                            <td>$@(item.Price* item.Count)</td>
                            <td>
                                <form asp-action="DeleteMovie" method="post">
                                    <input type="hidden" name="movieId" value="@item.MovieId" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Remove
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-4 gap-3">
            <h4>Total: <span class="text-success">$@total</span></h4>

            <div class="d-flex gap-2">
                <form asp-action="Index" method="get" class="d-flex align-items-center gap-2">
                    <input type="text" name="code" class="form-control" placeholder="Promo code" style="width: 180px;" />
                    <button type="submit" class="btn btn-outline-success">
                        <i class="bi bi-percent"></i> Apply
                    </button>
                </form>

                @if (Model.Any())
                {
                    <form asp-action="Pay" method="post" class="m-0">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-credit-card"></i> Pay Now
                        </button>
                    </form>
                }
            </div>
        </div>


    }
</div>
