@{
    ViewData["Title"] = "Order Confirmed";
}

<div class="container text-center py-5 my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <i class="bi bi-check-circle-fill display-1 text-success mb-3"></i>

            <h1 class="display-4 fw-bold text-dark">Thank You!</h1>
            <p class="fs-4 text-600 mb-4">Your payment was successful and your order is confirmed.</p>

            <div class="alert alert-soft-success">
                <i class="bi bi-envelope-fill me-2"></i>
                Your tickets have been sent to your registered email address.
            </div>

            <a asp-area="Customer" asp-controller="Movies" asp-action="Index" class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-house-door me-1"></i> Back to Home
            </a>

            <a asp-area="Identity" asp-controller="Profile" asp-action="Index" class="btn btn-outline-secondary btn-lg mt-3">
                <i class="bi bi-person-circle me-1"></i> View My Profile
            </a>

        </div>
    </div>
</div>