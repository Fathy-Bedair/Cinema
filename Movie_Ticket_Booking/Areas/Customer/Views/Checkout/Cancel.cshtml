@{
    ViewData["Title"] = "Order Cancelled";
}

<div class="container text-center py-5 my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <i class="bi bi-exclamation-triangle-fill display-1 text-danger mb-3"></i>

            <h1 class="display-4 fw-bold text-dark">Order Cancelled</h1>
            <p class="fs-4 text-600 mb-4">Your payment was not completed, and you have not been charged.</p>

            <div class="alert alert-soft-warning">
                <i class="bi bi-info-circle-fill me-2"></i>
                Any seats you had reserved have now been released.
            </div>

            <a asp-area="Customer" asp-controller="Movies" asp-action="Index" class="btn btn-outline-secondary btn-lg mt-3">
                <i class="bi bi-house-door me-1"></i> Back to Home
            </a>

            <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-arrow-left me-1"></i> Return to Cart
            </a>

        </div>
    </div>
</div>