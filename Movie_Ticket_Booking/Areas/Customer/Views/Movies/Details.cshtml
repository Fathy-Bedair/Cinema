@model Movie_Ticket_Booking.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="@Model.PosterURL" class="img-fluid rounded-start w-100 h-100 object-fit-cover" alt="@Model.Title" />
            </div>

            <div class="col-md-7">
                <div class="card-body">
                    <h2 class="card-title mb-3">@Model.Title</h2>
                    <p class="text-muted mb-2">
                        <strong>Category:</strong> @Model.Category?.Name
                    </p>
                    <p class="text-muted mb-2">
                        <strong>Cinema:</strong> @Model.Cinema?.Name
                    </p>
                    <p class="text-muted mb-2">
                        <strong>Release Date:</strong> @Model.ReleaseDate.ToShortDateString()
                    </p>
                    <p class="text-muted mb-3">
                        <strong>Status:</strong>
                        @if (Model.InCinema)
                        {
                            <span class="badge bg-success">Now Showing</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Coming Soon</span>
                        }
                    </p>

                    <h4 class="text-warning mb-3">$@Model.Price</h4>

                    <p class="card-text">@Model.Description</p>

                    <div class="mt-4">
                        <a href="@Url.Action("BookTicket", "Movies", new { id = Model.Id })" class="btn btn-success me-2">
                            <i class="fas fa-ticket-alt"></i> Book Ticket
                        </a>
                        <a href="@Url.Action("Index", "Movies")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.MovieSubImages != null && Model.MovieSubImages.Any())
    {
        <div class="mt-4">
            <h4>Gallery</h4>
            <div class="row">
                @foreach (var img in Model.MovieSubImages)
                {
                    <div class="col-md-3 mb-3">
                        <img src="@img.Img" class="img-fluid rounded shadow-sm" alt="Sub image" />
                    </div>
                }
            </div>
        </div>
    }

    @if (Model.Actors != null && Model.Actors.Any())
    {
        <div class="mt-4">
            <h4>Cast</h4>
            <div class="row">
                @foreach (var actor in Model.Actors)
                {
                    <div class="col-md-4 col-lg-3 mb-3 text-center">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <img src="@actor.ProfilePictureURL" class="img-fluid rounded-circle mb-2" alt="@actor.Name" style="width: 100px; height: 100px; object-fit: cover;" />
                                <h6 class="card-title">@actor.Name</h6>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
