@model IEnumerable<Movie_Ticket_Booking.Models.Movie>
@{
    ViewData["Title"] = "Home";
}

<style>
    /* ... (Your existing CSS remains here) ... */
    .movie-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        border-radius: 10px;
    }

        .movie-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

        .movie-card img {
            height: 380px;
            object-fit: cover;
        }

    .hero-text-shadow {
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
    }
</style>

<div class="pb-6">

    <div class="hero-section bg-dark text-white pt-7 pb-6 mb-6 rounded-3"
         style="background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.9)),
                url('/assets/img/generic/cinema-bg.jpg'); background-size: cover; background-position: center; border-radius: 15px;">
        <div class="row align-items-center g-3">
            <div class="col-lg-10 text-center mx-auto">
                <h1 class="display-2 fw-bolder mb-3 text-warning hero-text-shadow">
                    Lights, Camera, Action!
                </h1>
                <p class="fs-5 text-200 mb-4 hero-text-shadow">
                    Your exclusive pass to the world's best cinematic releases. Book seats for the latest blockbusters effortlessly.
                </p>
                <a class="btn btn-lg btn-danger shadow-lg px-5 py-3 fs-6" href="@Url.Action("List", "Movies")">
                    <i class="bi bi-ticket-fill me-2"></i> Book Your Ticket Now
                </a>
            </div>
        </div>
    </div>


    <div class="mb-6">
        <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
            <h2 class="h3 mb-0 text-dark"><i class="bi bi-fire text-danger me-2"></i> Now Showing Blockbusters</h2>
            <a class="btn btn-sm btn-outline-danger" href="@Url.Action("List", "Movies")">View All <i class="bi bi-arrow-right"></i></a>
        </div>

        <div class="row g-4">
            @foreach (var movie in Model)
            {
                <div class="col-md-6 col-lg-3 d-flex">
                    <div class="card movie-card h-100 bg-light shadow-sm border-0">
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="text-decoration-none text-dark">
                            <div class="position-relative">
                                <img src="@movie.PosterURL" class="card-img-top" alt="@movie.Title">

                                <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2"><i class="bi bi-star-fill me-1"></i> New</span>

                                @if (movie.InCinema)
                                {
                                    <span class="badge bg-danger position-absolute bottom-0 start-0 m-2">Showing</span>
                                }
                            </div>
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate fw-bold mb-1">@movie.Title</h5>

                            <p class="card-text fs-10 text-600 mb-2">
                                <i class="bi bi-tag-fill me-1 text-primary"></i> Genre: **@movie.Category.Name**
                            </p>

                            <p class="card-text fs-10 text-600 mb-3">
                                <i class="bi bi-building me-1 text-secondary"></i> Cinema: **@movie.Cinema.Name**
                            </p>

                            <p class="card-text fs-9 mb-3 fw-bold">
                                <i class="bi bi-currency-dollar me-1 text-success"></i> Price: $@movie.Price.ToString("F2")
                            </p>

                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id"
                               class="btn btn-sm btn-primary w-100 mt-auto">
                                <i class="bi bi-calendar-check me-1"></i> Get Tickets
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center mt-5" role="alert">
                <i class="bi bi-info-circle me-2"></i> There are no movies currently showing. Check back soon!
            </div>
        }
    </div>

    <div class="mb-6">
        <div class="alert alert-secondary text-center py-4">
            <h4 class="alert-heading">Stay Tuned!</h4>
            <p>We have a fantastic line-up of movies ready to hit the screens. Check our full calendar to see upcoming release dates.</p>
            <hr>
            @if (!User.Identity.IsAuthenticated)
            {

                <p class="mb-0">Don't miss out! <a asp-area="Identity" asp-controller="Account" asp-action="Register">Register now</a> for email notifications on new releases.</p>
            }

        </div>
    </div>


    <hr class="mt-5 mb-5" />
    <div class="row text-center mb-5">
        <div class="col-md-4">
            <i class="bi bi-geo-alt display-4 text-primary"></i>
            <h4 class="mt-3">Convenient Locations</h4>
            <p class="text-600">Modern auditoriums across the city.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-lightning-charge display-4 text-primary"></i>
            <h4 class="mt-3">Fast Booking</h4>
            <p class="text-600">Quick and easy booking process in just three steps.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-person-fill-gear display-4 text-primary"></i>
            <h4 class="mt-3">Excellent Support</h4>
            <p class="text-600">Our support team is ready to help you 24/7.</p>
        </div>
    </div>
</div>