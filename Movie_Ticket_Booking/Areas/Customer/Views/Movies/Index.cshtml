@model IEnumerable<Movie_Ticket_Booking.Models.Movie>

@{
    ViewData["Title"] = "Movies";
    var selectedCategoryId = Context.Request.Query["categoryId"].ToString();
    var selectedCinemaId = Context.Request.Query["cinemaId"].ToString();
    var sekectedsortOrder = Context.Request.Query["sortOrder"].ToString();
}

<main class="main" id="top">
    <div class="container" data-layout="container">
        <div class="content">

            <div class="card mb-3">
                <div class="card-body">
                    <form method="get" class="row g-3 align-items-center">
                        <div class="col-md-3">
                            <label class="form-label mb-0">Search by Title</label>
                            <input type="text" name="search" class="form-control"
                                   placeholder="Enter movie name..."
                                   value="@ViewBag.Search" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label mb-0">Filter by Category</label>
                            <select name="categoryId" class="form-select">
                                <option value="">All Categories</option>
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.Id"
                                            selected="@(selectedCategoryId == category.Id.ToString() ? "selected" : null)">
                                        @category.Name
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label mb-0">Filter by Cinema</label>
                            <select name="cinemaId" class="form-select">
                                <option value="">All Cinemas</option>
                                @foreach (var cinema in ViewBag.Cinemas)
                                {
                                    <option value="@cinema.Id"
                                            selected="@(selectedCinemaId == cinema.Id.ToString() ? "selected" : null)">
                                        @cinema.Name
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-center">
                            <div class="form-check mt-3">
                                <input type="checkbox" class="form-check-input" id="inCinema" name="inCinema" value="true"
                                       @(ViewBag.InCinema == true ? "checked" : "") />
                                <label class="form-check-label" for="inCinema">Now Showing Only</label>
                            </div>
                        </div>
                        <div class="col-md-2 mt-4">
                            <button type="submit" class="btn btn-primary w-100">Filter</button>
                        </div>

                        <div class="col-md-2 mt-4">
                            <a href="@Url.Action("Index")" class="btn btn-secondary w-100">Reset</a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Showing @Model.Count() Movies</h6>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var movie in Model)
                            {
                                <div class="mb-4 col-md-6 col-lg-4">
                                    <div class="border rounded-1 h-100 d-flex flex-column justify-content-between pb-3 shadow-sm">
                                        <div class="overflow-hidden">
                                            <div class="position-relative rounded-top overflow-hidden">
                                                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="d-block">
                                                    <img class="img-fluid rounded-top"
                                                         src="@movie.PosterURL"
                                                         alt="@movie.Title" />
                                                </a>
                                            </div>

                                            <div class="p-3">
                                                <h5 class="fs-6 fw-bold mb-1">
                                                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id"
                                                       class="text-dark text-decoration-none">
                                                        @movie.Title
                                                    </a>
                                                </h5>

                                                <p class="text-muted mb-1">
                                                    Category: <strong>@movie.Category.Name</strong>
                                                </p>
                                                <p class="text-muted mb-1">
                                                    Cinema: <strong>@movie.Cinema.Name</strong>
                                                </p>

                                                <p class="mb-2">
                                                    Release Date: <strong>@movie.ReleaseDate.ToShortDateString()</strong>
                                                </p>

                                                <h5 class="text-warning mb-0">
                                                    $@movie.Price
                                                </h5>

                                                <p class="mt-2 mb-0">
                                                    Status:
                                                    @if (movie.InCinema)
                                                    {
                                                        <span class="badge bg-success">Now Showing</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">Coming Soon</span>
                                                    }
                                                </p>
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-between px-3">
                                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id"
                                               class="btn btn-sm btn-outline-primary">
                                                Details
                                            </a>

                                            <a asp-controller="Movies" asp-action="BookTicket" asp-route-id="@movie.Id"
                                               class="btn btn-sm btn-outline-success">
                                                Book Ticket
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12 text-center py-5">
                                <h4>No movies available</h4>
                                <p class="text-muted">Try changing the filters above.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
