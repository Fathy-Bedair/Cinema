@model ECommerce.ViewModels.ResendEmailConfirmationVM
@{
    ViewData["Title"] = "Resend Email Confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">Resend Email Confirmation</h3>

                    <form asp-action="ResendEmailConfirmation" method="post" novalidate>
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label class="form-label">Email Address</label> <input asp-for="UserNameOREmail" class="form-control" placeholder="Username or Email" />
                            <span asp-validation-for="UserNameOREmail" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 py-2">Resend Confirmation Email</button>
                    </form>

                    <div class="position-relative mt-4">
                        <hr class="text-muted" />
                        <div class="divider-content-center text-muted fw-semibold">
                            Done? Login to your account
                        </div>
                    </div>

                    <div class="mt-2">
                        <a class="btn btn-outline-primary d-block w-100" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Back to Login
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}